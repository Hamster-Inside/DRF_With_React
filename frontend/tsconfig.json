{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "jsx": "react-jsx",
      "baseUrl": "./src",
      "allowJs": true,
      "checkJs": true,
      "paths": {
        "*": ["*"],
        "config": ["config.ts"],
        "pages/*": ["pages/*"],
        "components/*": ["components/*"],
        "services/*": ["services/*"],
        "hooks/*": ["hooks/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  